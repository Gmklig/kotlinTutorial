<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.KotlinTutorial.AppBarOverlay"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="281dp"
        android:layout_height="281dp"
        android:translationX="65dp"
        android:translationY="84dp"
        app:srcCompat="@drawable/start_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Добро пожаловать"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:translationX="38dp"
        android:translationY="366dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="337dp"
        android:layout_height="45dp"
        android:backgroundTint="#FF726F"
        android:drawable="@color/black"
        android:fontFamily="serif"
        android:text="Войти в приложение"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:translationX="38dp"
        android:translationY="440dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="319dp"
        android:layout_height="78dp"
        android:fontFamily="serif"
        android:text="Если вас нет в системе обратитесь к администратору и подайте заявку на регистрацию."
        android:textColor="#78838F"
        android:textSize="16dp"
        android:translationX="38dp"
        android:translationY="500dp" />

</FrameLayout>